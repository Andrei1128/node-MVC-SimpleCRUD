<% layout('boilerplate/layout.ejs') %>
    <a class="btn btn-primary btn-back" href="/home">Back</a>
    <div class="form-wrapper">
        <h2 class="form-title">Edit Employee Data</h2>
        <form action="/home/<%=angajat.id%>?_method=PUT" method="POST">
            <input type="text" class="form-control" name="prenume" placeholder="First Name" value=<%=angajat.prenume%>>
            <input type="text" class="form-control" name="nume" placeholder="Last Name" value=<%=angajat.nume %>>
            <input type="text" class="form-control" name="email" placeholder="Email" value=<%=angajat.email %>>
            <input type="text" class="form-control" name="salariu" placeholder="Salary" value=<%=angajat.salariu %>>
            <input type="text" class="form-control" name="data" placeholder="Date" value=<%=angajat.data %>>
            <button class="btn btn-primary form-btn">Save</button>
        </form>
    </div>